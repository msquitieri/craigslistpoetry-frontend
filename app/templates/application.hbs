<header id='nav'>
  <span {{action 'scrollTo' '#create' }} id='title'>Craigslist Poetry</span>
  <ul>
    <li {{action 'scrollTo' '#create'}} href="#create">Create</li>
    <li {{action 'scrollTo' '#read'}} href="#read">Read</li>
    <li {{action 'scrollTo' '#follow' }} href="#follow">Follow</li>
  </ul>
</header>
<div id='main'>
  <section id='create'>
    <h1>We create poetry from NYC Craigslist Missed Connections Posts</h1>
    <button {{action 'createNewPoem'}} id='create-new-button' class='button'>
      {{#if creatingPoem}}
        {{loading-spinner}}
      {{else}}
        Generate Poem
      {{/if}}
    </button>
    {{how-to-message}}
  </section>
  <section id='read'>

    {{outlet}}

  </section>
  <section id='follow'>
    <h1>Poetry to your timeline every 2 hours.</h1>
    <div id='twitter-holder'>
      {{twitter-timeline}}
    </div>
  </section>
</div>
<footer>
  <p>Made in Brooklyn</p>
  <span>An <a href='http://www.twitter.com/msquiggs'>@msquiggs</a> production</span>
  <!-- <span>Created by <a href='http://www.twitter.com/msquiggs'>@msquiggs</a></span> -->
</footer>