<h1>Read poems generated by users like you</h1>
<ul id='poem-list'>
  {{#each sortedPoems as |poem|}}
    <li {{action 'displayPoem' poem}}>Poem #{{poem.id}}: {{poem.lines.firstObject}}</li>
  {{/each}}
</ul>
<button {{action 'loadMorePoems'}} id='get-more-poems-button' class='button'>Load More Poems</button>

{{outlet}}