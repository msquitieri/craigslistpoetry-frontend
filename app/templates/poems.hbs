<h1>Read poems generated by users like you</h1>
<ul id='poem-list'>
  {{#each sortedPoems as |poem|}}
    <li {{action 'displayPoem' poem}}>{{poem.previewText}}</li>
  {{/each}}
</ul>
<button {{action 'loadMorePoems'}} id='get-more-poems-button' class='button'>
  {{#if loadingMorePoems}}
    {{loading-spinner}}
  {{else}}
    Load More Poems
  {{/if}}
</button>

{{outlet}}